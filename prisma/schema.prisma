generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar(40)
  species String @db.VarChar(40)
  breed   String @db.VarChar(40)
  age     Int
  ownerId Int
  owner   Owner? @relation(fields: [ownerId], references: [id])
}

model Owner {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(40)
  lastName String @db.VarChar(40)
  email    String @unique
  pets     Pet[]
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
  RECEPTIONIST
  VET
}
